<form {{action "submit" on="submit"}}>
  <h4>New Post: {{title}}</h4>
  <div class="form-group">
    <label>Title</label>
    {{input value=title required=true class="form-control"}}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{input value=body required=true class="form-control"}}
  </div>
  <button class="btn btn-default" type='submit'>Create</button>
</form>
