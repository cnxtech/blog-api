<article>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title pull-left">{{title}}</h3>
      <div class="pull-right">
        <em>{{link-to 'Edit' 'posts.edit' this class="btn btn-primary btn-xs"}}</em>
        <em><a href="#" class="btn btn-primary btn-xs" {{action 'delete' on='click'}}>Delete</a></em>
      </div>
      <br style="clear: both;" />
    </div>

    <div class="panel-body">
      {{body}}
    </div>
  </div>
</article>

<hr style="clear: both;" />

<section class="comments">
  <h4>Comments</h4>

  {{#each comment in comments}}
    <div class="list-group">
      <a href="#" class="list-group-item">
        <p class="list-group-item-text">{{comment.body}}</p>
      </a>
    </div>
  {{/each}}

  <br />
  <h4>Write your own comment!</h4>
  <form role="form" {{action "submit" on="submit"}}>
    <div class="form-group">
    </div>

    <button type='submit' class="btn btn-default">Comment!</button>
  </form>
</section>
