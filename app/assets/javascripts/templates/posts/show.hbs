{{partial "post"}}

<hr style="clear: both;" />

<section class="comments">
  <h4>Comments</h4>

  <div class="list-group">
    {{#each comment in model.comments}}
      <a href="#" class="list-group-item">
        <p class="list-group-item-text">{{comment.body}}</p>
      </a>
    {{/each}}
  </div>

  <br />
  <h4>Write your own comment!</h4>
  <form role="form" {{action "submit" on="submit"}}>
    <div class="form-group">
      {{textarea value=comment required=true class="form-control"}}
    </div>

    <button type='submit' class="btn btn-default">Comment!</button>
  </form>
</section>
