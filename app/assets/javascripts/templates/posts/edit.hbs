<form {{action "submit" on="submit"}}>
  <h4>Editing Post: {{model.title}}</h4>
  <div class="form-group">
    <label>Title</label>
    {{input value=model.title required=true class="form-control"}}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{input value=model.body required=true class="form-control"}}
  </div>
  <button class="btn btn-default" type='submit'>Update</button>
</form>

<hr />

{{#with model}}
  {{partial "post"}}
{{/with}}
