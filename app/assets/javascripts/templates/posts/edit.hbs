<form {{action 'edit' on='submit'}}>
  <h4>Editing Post: {{unbound title}}</h4>
  <div class="form-group">
    <label>Title</label>
    {{input value=title required=true class="form-control"}}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{input value=body required=true class="form-control"}}
  </div>
  <button class="btn btn-default" type='submit'>Update</button>
</form>

<hr />

<article>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title pull-left">{{title}}</h3>
      <br style="clear: both;" />
    </div>

    <div class="panel-body">
      {{body}}
    </div>
  </div>
</article>
